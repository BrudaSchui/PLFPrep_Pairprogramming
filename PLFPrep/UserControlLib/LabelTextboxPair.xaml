<UserControl x:Class="UserControlLib.LabelTextboxPair"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserControlLib"
             mc:Ignorable="d" 
             MinWidth="350">
    <DockPanel LastChildFill="True">
        <Label Name="lblTitle" DockPanel.Dock="Left"/>
        <TextBox Name="tbValue" TextChanged="tbValue_TextChanged" VerticalAlignment="Center"/>
    </DockPanel>
</UserControl>
